<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.qf.lepaiyizu.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#ededed">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:id="@+id/fragmentId"></RelativeLayout>

    <RadioGroup
        android:id="@+id/mainRadioTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/mainRadio_news"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/tab1_news_focus"
            android:button="@null"
            android:checked="true" />

        <RadioButton
            android:id="@+id/mainRadio_pic"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/tab2_pic_normal"
            android:button="@null" />

        <RadioButton
            android:id="@+id/mainRadio_bbs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/tab3_bbs_normal"
            android:button="@null" />

        <RadioButton
            android:id="@+id/mainRadio_set"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/tab4_set_normal"
            android:button="@null" />
    </RadioGroup>
</RelativeLayout>
